<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:focusable="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageHig"
        android:src="@drawable/higimg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="130dp"
        android:cropToPadding="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_title"
        android:id="@+id/textTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_GPS"
        android:id="@+id/buttonGPS"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textTitle"
        android:onClick="startMapActivity"
        android:layout_alignRight="@+id/textDesc"
        android:layout_alignEnd="@+id/textDesc"
        android:layout_alignLeft="@+id/textDesc"
        android:layout_alignStart="@+id/textDesc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_info"
        android:id="@+id/textDesc"
        android:layout_below="@+id/textTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="7dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_check"
        android:id="@+id/checkBox"
        android:layout_below="@+id/buttonGPS"
        android:layout_alignStart="@+id/buttonGPS"
        android:layout_alignLeft="@+id/buttonGPS"
        android:checked="false"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_checked"
        android:id="@+id/buttonChecked"
        android:layout_below="@+id/buttonGPS"
        android:layout_alignEnd="@+id/buttonGPS"
        android:layout_alignRight="@+id/buttonGPS"
        android:layout_alignBottom="@+id/checkBox"
        android:onClick="isItChecked"
        android:layout_marginTop="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp" />

</RelativeLayout>